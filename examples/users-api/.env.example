# Service Configuration
ACTON_SERVICE_NAME=users-api
ACTON_SERVICE_PORT=8080
ACTON_LOG_LEVEL=info
ACTON_TIMEOUT_SECS=30
ACTON_ENVIRONMENT=dev

# JWT Configuration
ACTON_JWT_PUBLIC_KEY_PATH=./keys/jwt-public.pem
ACTON_JWT_ALGORITHM=RS256
# ACTON_JWT_ISSUER=auth-api
# ACTON_JWT_AUDIENCE=users-api

# Rate Limiting
ACTON_RATE_LIMIT_PER_USER_RPM=200
ACTON_RATE_LIMIT_PER_CLIENT_RPM=1000
ACTON_RATE_LIMIT_WINDOW_SECS=60

# Database (YSQL - PostgreSQL compatible)
ACTON_DATABASE_URL=postgres://postgres:postgres@localhost:5433/users_db
ACTON_DATABASE_MAX_CONNECTIONS=50
ACTON_DATABASE_MIN_CONNECTIONS=5
ACTON_DATABASE_CONNECTION_TIMEOUT_SECS=10

# Redis
ACTON_REDIS_URL=redis://localhost:6379
ACTON_REDIS_MAX_CONNECTIONS=20
ACTON_REDIS_CONNECTION_TIMEOUT_SECS=10

# NATS JetStream
ACTON_NATS_URL=nats://localhost:4222
ACTON_NATS_NAME=users-api
ACTON_NATS_MAX_RECONNECTS=10

# OpenTelemetry (OTLP)
ACTON_OTLP_ENDPOINT=http://localhost:4317
ACTON_OTLP_SERVICE_NAME=users-api
ACTON_OTLP_ENABLED=true
